<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:background="@drawable/im2"
    tools:context=".LoginActivity">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginTop="160dp"
        android:text="Sign in"
        android:textAlignment="center"
        android:textColor="#e809e1"
        android:textSize="25sp"
        tools:ignore="HardcodedText,Suspicious0dp"
        />

    <LinearLayout
        android:layout_marginTop="0dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_gravity="center"
        tools:ignore="ExtraText">

        <EditText
            android:id="@+id/user"
            android:layout_gravity="center"
            android:layout_width="270dp"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:textAlignment="center"
            android:hint="@string/username"
            android:background="@drawable/edittextradius"
            />
        <EditText
            android:id="@+id/password"
            android:layout_gravity="center"
            android:layout_width="270dp"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:inputType="textPassword"
            android:hint="@string/password"
            android:textAlignment="center"
            android:background="@drawable/edittextradius"
            />
        <EditText
            android:id="@+id/rePassword"
            android:layout_gravity="center"
            android:layout_width="270dp"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:inputType="textPassword"
            android:hint="Re Enter Password"
            android:textAlignment="center"
            android:background="@drawable/edittextradius"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_marginTop="30dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/regisBtn"
            android:layout_width="160dp"
            android:layout_height="50dp"
            android:layout_marginStart="20dp"
            android:background="@drawable/btnradius"
            android:text="register"
            android:textColor="#e809e1"
            app:backgroundTint="@null" />

        <Button
            android:layout_marginEnd="20dp"
            app:backgroundTint="@null"
            android:id="@+id/mtLogin"
            android:layout_width="160dp"
            android:layout_height="50dp"
            android:layout_marginStart="70dp"
            android:background="@drawable/btnradius"
            android:text="move to login"
            android:textColor="#e809e1" />
    </LinearLayout>
    <Button
        android:layout_gravity="center"
        app:backgroundTint="@null"
        android:id="@+id/Exit"
        android:layout_width="160dp"
        android:layout_height="50dp"
        android:background="@drawable/btnradius"
        android:text="Exit"
        android:textColor="#e809e1" />
</LinearLayout>